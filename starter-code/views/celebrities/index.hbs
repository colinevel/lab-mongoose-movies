<div class="page">
    <h2 class="title">All celebrities</h2>
    <hr>

    <ul>
        {{#each celebrities}}
        <li>
            <a href="/celebrities/single/{{this._id}}">{{this.name}}</a>
            <form action="/celebrities/{{this._id}}/delete">
                <button>Delete</button>
            </form>
            <form action="/celebrities/{{this._id}}/edit">
                <button>Edit</button>
            </form>
        </li>
        {{/each}}
    </ul>

    <a href="/celebrities/add">Add a new celebrity</a>

</div>